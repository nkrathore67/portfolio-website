<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Certifications - Neeraj Kumar Rathor</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Include Main Navbar -->
    <%- include('partials/navbar') %>

    <!-- Include Secondary Navbar -->
    <%- include('partials/secondary-navbar') %>

    <!-- Certifications Section -->
    <div class="container">
        <h1>Certifications</h1>
        <ul class="certifications-list">
            <% portfolioData.certifications.forEach(cert => { 
                // Sanitize the certification name to match the filename
                const certFileName = cert
                    .toLowerCase()
                    .replace(/[^a-z0-9]+/g, '-') // Replace non-alphanumeric characters with hyphens
                    .replace(/-+$/, ''); // Remove trailing hyphens
            %>
                <li>
                    <a href="/images/certificates/<%= certFileName %>.jpg" target="_blank">
                        <%= cert %>
                    </a>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>